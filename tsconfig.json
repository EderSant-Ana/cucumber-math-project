{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "./dist",
    "allowJs": true,  // <--- ADD THIS LINE
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "features/**/*.ts",
    "step-definitions/**/*.ts",
    "src/**/*.ts",
    "cucumber.cjs", // <--- This file is JS, needs allowJs to be recognized
    "utils/VegetablesManager.ts"  ]
}